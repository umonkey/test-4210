{% extends 'layouts/base.twig' %}

{% block contents %}
    <div class='page-header'>
        <h1>Редактирование задачи</h1>
    </div>

    <div class='addTask'>
        <form class='async' method='post'>
            <input type='hidden' name='csrf_token' value='{{ csrf_token }}'/>

            <div class='form-group'>
                <label>Имя:</label>
                <input class='form-control' type='text' name='user' value='{{ task.user }}' required/>
            </div>
            <div class='form-group'>
                <label>Email:</label>
                <input class='form-control' type='email' name='email' value='{{ task.email }}' required/>
            </div>
            <div class='form-group'>
                <label>Задача:</label>
                <textarea class='form-control' name='text' required>{{ task.text }}</textarea>
            </div>
            <div class='form-group'>
                <label class='checkbox'><input type='checkbox' name='completed' value='yes'{% if task.completed %} checked{% endif %}/> Выполнена</label>
            </div>
            <div class='form-actions'>
                <button class='btn btn-primary' type='submit'>Сохранить</button>
            </div>
        </form>
    </div>
{% endblock %}
